#include<stdio.h>
int main()
{
    int n;
    while(scanf("%d",&n) != EOF)
    {
        //控制打印的行
        for(int i = 0;i < n;i++)
        {
            //控制*前空格的数量
            for(int j = 0;j < n - i - 1;j++)
            {
                printf(" ");
            }
            //控制*的数量
            for(int a = 0;a < i + 1;a++)
            {
                printf("* ");
            }
            printf("\n");
        }
    }
    return 0;
}
