#include<stdio.h>
#include<stdlib.h>
//排序，将最大值放到arr[n],最小值arr[0]
void BubbleSort(float *arr,int n)
{
    int end = n;
    while(end > 0)
    {
        int flag = 0;
        for(int i = 1;i < end;++i)
        {
            if(arr[i - 1] > arr[i])
            {
                float tem = arr[i];
                arr[i] = arr[i - 1];
                arr[i - 1] = tem;
                flag = 1;
            }
        }
        if(flag == 0)
        {
            break;
        }
        --end;
    }
}
//求平均数
float Average(float *p,int n)
{
    float sum = 0;
    for(int i = 0;i < n;i++)
    {
        sum = sum + p[i];
    }
    return sum / n;
}
int main()
{
    int n;
    scanf("%d",&n);
    float* arr = (float*)malloc(n * sizeof(float));
    //输入所有成绩
    for(int i = 0;i < n;i++)
    {
        scanf("%f ",&arr[i]);
    }
    BubbleSort(arr,n);
    float average = Average(arr,n);
    printf("%.2f %.2f %.2f",arr[n - 1],arr[0],average);
    return 0;
}
