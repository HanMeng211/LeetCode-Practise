#include<stdio.h>
int main()
{
    int n;
    while(scanf("%d",&n) != EOF)
    {
        for(int i = 0;i < n;i++)
        {
            for(int j = 0;j < i;j++)
            {
                printf(" ");
            }
            for(int a = 0;a < n - i;a++)
            {
                printf("* ");
            }
            printf("\n");
        }
    }
    return 0;
}
