#include<stdio.h>
int main()
{
    int n;
    while(scanf("%d",&n) != EOF)
    {
        //控制行
        for(int i = 0;i < n;i++)
        {
            //控制*前面的空格
            for(int j = 0;j < n - i - 1;j++)
            {
                printf(" ");
            }
            printf("*");
            //控制*后面的空格
            for(int j = 0;j < i;j++)
            {
                printf(" ");
            }
            printf("\n");
        }
    }
    return 0;
}
