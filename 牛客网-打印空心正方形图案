#include<stdio.h>
int main()
{
	int n;
	while (scanf("%d", &n) != EOF)
	{
		//第一行
		for (int i = 0; i < n; i++)
		{
			printf("* ");
		}
		printf("\n");
		//第2~n-1行
		for (int j = 0; j < n - 2; j++)
		{
			printf("* ");
			for (int a = 0; a < n - 2; a++)
			{
				printf("  ");
			}
			printf("* \n");
		}
		//第n行
		for (int i = 0; i < n; i++)
		{
			printf("* ");
		}
		printf("\n");
	}
	return 0;
}
